*
  box-sizing border-box
  padding 0
  margin 0

html, body
  height 100%
  font-family "Roboto", sans-serif

body
  display flex
  flex-direction column
  justify-content space-between
  align-items center

.header
  margin-top 100px
  width 100%
  display flex
  justify-content center
  align-items center
  gap 20px
  text-align center

.main-logo
  color #5844b1
  font-size 38px
  font-weight 800
  line-height 1.3

  h1
    font-size 48px

.header-image
  width 20%
  height auto

  img
    width 100%
    height 100%
    object-fit cover
    border-radius 15px

.brand-motto
  margin-top 10px
  font-size 22px
  font-weight 400
  color #1e1642

.main
  display flex
  flex-direction column
  align-items center
  gap 40px
  margin-top 40px

.featured-items
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 30px
  justify-items center
  width 80%
  margin-left 10%

.promotion-item
  display grid
  grid-template-columns 200px 1fr
  max-width 700px
  padding 20px
  background-color #f5f5f5
  border-radius 10px
  box-shadow 0 0 15px rgba(0, 0, 0, 0.1)
  align-items center

.product-image
  height 180px
  width 180px
  border-radius 10px

  img
    height 100%
    width 100%
    object-fit cover
    border-radius 10px

.item-description
  margin-left 20px

.item-title
  color #5844b1
  font-weight 700
  font-size 22px
  margin-bottom 15px

.item-info
  color #1e1642
  font-size 16px

.newsletter-form
  margin-top 0
  display flex
  gap 15px
  justify-content center
  align-items center

.email-input
  width 380px
  padding 12px
  text-align center
  border 1px solid #5844b1
  border-radius 5px
  font-size 16px
  outline none
  transition padding 0.3s ease

  &:focus
    border-color #5844b1

.subscribe-button
  padding 12px 25px
  font-size 16px
  background-color #5844b1
  border-radius 5px
  border none
  color white
  cursor pointer
  transition opacity 0.3s, transform 0.2s

  &:hover
    opacity 0.7
    transform scale(1.05)

.footer
  width 100%
  height 150px
  margin-top 40px
  background-color #5844b1
  display flex
  justify-content center
  border-top 1px solid #5844b1

.footer-list
  margin 10px 0 20px
  display grid
  gap 20px
  grid-template-columns repeat(3, 100px)

.footer-link
  color white
  text-decoration none
  transition all 0.25s ease-in-out

  &:hover
    opacity 0.7

.footer-icon
  text-align center
  color white
  font-size 18px
  display flex
  align-items center
  justify-content center

@media (max-width: 768px)
  .header
    flex-direction column
    margin-top 40px

  .header-image
    width 180px
    height 180px

  .main-logo
    font-size 30px

  .brand-motto
    font-size 18px

  .featured-items
    grid-template-columns 1fr
    width 90%
    gap 20px
    margin-left 5%

  .promotion-item
    grid-template-columns 1fr
    width 100%

  .product-image
    width 100%
    height 180px

  .newsletter-form
    flex-direction column
    width 80%

  .email-input
    width 100%

  .footer
    margin-top 20px

@media (max-width: 450px)
  .header-image
    width 160px
    height 160px

  .brand-motto
    font-size 16px

  .subscribe-button
    width 100%
    padding 15px

  .footer-list
    grid-template-columns 1fr 1fr

@media (min-width: 1200px)
  .featured-items
    grid-template-columns repeat(2, 1fr)
    gap 40px
    width 80%
    margin-left 10%

  .promotion-item
    grid-template-columns 250px 1fr
    padding 30px
    max-width 800px

  .product-image
    width 240px
    height 240px

  .item-title
    font-size 24px

  .item-info
    font-size 18px

  .email-input
    width 500px
    padding 15px
    font-size 22px

  .subscribe-button
    padding 15px 30px
    font-size 22px

  .footer-link
    font-size 22px
